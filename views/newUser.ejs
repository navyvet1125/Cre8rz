<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
  	<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css">
    <link rel='stylesheet' href='/stylesheets/style.css' />
  </head>
  <body>
	  <header>
	    <%- include('partials/header.ejs' ) %>
	  </header>
	  <article class="container">
	  	<section>
	  		<div class="row">
	  			<div class="col-md-6 col-md-offset-3">
	  				<h1>Sign Up</h1>
				    <% form_for("user",{class:"form-group", method:'post'}, function(f){ %>
				        <%- f.label_for("name") %>
				        <%- f.text_field("name",{class:"form-control"}) %><br />
				        <%- f.label_for("login","username") %>
				        <%- f.text_field("login",{class:"form-control"}) %><br />
				        <%- f.label_for("location","City") %>
				        <%- f.text_field("location",{class:"form-control"}) %><br />
				        <%- f.label_for("email") %>
				        <%- f.email_field("email",{class:"form-control"}) %> <br />
				        <%- f.label_for("password") %>
				        <%- f.password_field("password",{class:"form-control"}) %> <br />
				        <%- f.label_for("confirm") %>
				        <%- f.password_field("confirm",{class:"form-control"}) %><br />
				        <%- f.submit() %>
				        <%- f.reset() %><br />     
				    <% }) %>
	  			</div>
	  		</div>
	  	</section>
	  </article>
   </body>
</html>